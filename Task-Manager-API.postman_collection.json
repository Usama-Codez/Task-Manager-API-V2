        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Learn Swagger\",\n  \"completed\": false\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "tasks"]
        },
        "description": "Create a new task. Title is required and must be a string. Completed is optional (defaults to false) and must be a boolean."
      },
      "response": []
    },
