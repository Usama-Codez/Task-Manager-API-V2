  "item": [
    {
      "name": "Get All Tasks",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/tasks",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "tasks"]
        },
        "description": "Retrieve all tasks from the in-memory storage"
      },
      "response": []
    },
    {
      "name": "Search Tasks by Title",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/tasks?title=learn",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "tasks"],
          "query": [
            {
              "key": "title",
              "value": "learn",
              "description": "Filter tasks by title (case-insensitive)"
            }
          ]
        },
        "description": "Search and filter tasks by title using query parameter"
      },
      "response": []
    },
    {
      "name": "Get Task by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/tasks/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "tasks", ":id"],
          "variable": [
            {
              "key": "id",
              "value": "a1b2c3d4-e5f6-7890-abcd-ef1234567890",
              "description": "UUID of the task to retrieve"
            }
          ]
        },
        "description": "Get a specific task by its UUID. Replace :id with actual task ID from GET all tasks response"
      },
      "response": []
    },
